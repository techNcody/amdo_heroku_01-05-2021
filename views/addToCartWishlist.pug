  body
    // Search Wrapper Area Start
    .search-wrapper.section-padding-100
      .search-close
        i.fa.fa-close(aria-hidden="true")
      .container
        .row
          .col-12
            .search-content
              form(action="#" method="get")
                input#search(type="search" name="search" placeholder="Type your keyword...")
                button(type="submit")
                  img(src="/img/core-img/search.png" alt="")
    // Search Wrapper Area End
    // ##### Main Content Wrapper Start #####
    .main-content-wrapper.d-flex.clearfix
      // Mobile Nav (max width 767px)
      .mobile-nav
        // Navbar Brand
        .amado-navbar-brand
          a(href="/index.html")
            img(src="/img/core-img/logo.png" alt="")
        // Navbar Toggler
        .amado-navbar-toggler
          span
          span
          span
      // Header Area Start
      header.header-area.clearfix
        // Close Icon
        .nav-close
          i.fa.fa-close(aria-hidden="true")
        // Logo
        .logo
          a(href='/')
            img(src="/img/core-img/logo.png" alt="")
        // Amado Nav
        nav.amado-nav
          ul
            li
              a(href='/') Home
            li
              a(href='#') Shop
            li
              a(href='#') Product
            li.active
              a(href="#") Cart
            li
              a(href='#') Checkout
        // Button Group
        .amado-btn-group.mt-30.mb-100
          a.btn.amado-btn.mb-15(href="#") %Discount%
          a.btn.amado-btn.active(href="#") New this week
        // Cart Menu
        .cart-fav-search.mb-100
          a.cart-nav(href="#")
            img(src="/img/core-img/cart.png" alt="")
            |  Cart 
            span (0)
          a.fav-nav(href="#")
            img(src="/img/core-img/favorites.png" alt="")
            |  Favourite
          a.search-nav(href="#")
            img(src="/img/core-img/search.png" alt="")
            |  Search
        // Social Button
        .social-info.d-flex.justify-content-between
          a(href="#")
            i.fa.fa-pinterest(aria-hidden="true")
          a(href="#")
            i.fa.fa-instagram(aria-hidden="true")
          a(href="#")
            i.fa.fa-facebook(aria-hidden="true")
          a(href="#")
            i.fa.fa-twitter(aria-hidden="true")
      // Header Area End
      .cart-table-area.section-padding-100
        .container-fluid
          .row
            .col-12.col-lg-8
              .cart-title.mt-50
                h2 Shopping Cart
              .cart-table.clearfix
                table.table.table-responsive
                  thead
                    tr
                      th
                      th Name
                      th Price
                      th Quantity
                  tbody
                    each product, i in products
                        tr
                            td.cart_product_img
                                a(href=`/img/product-img/${product.images[0]}`)
                                    img(src=`/img/product-img/${product.images[0]}` alt=`${product.slug}`)
                            td.cart_product_desc
                                h5= product.name
                            td.price
                                span Rs.#{product.price}
                            td.qty
                                .qty-btn.d-flex
                                    p Qty
                                    .quantity
                                        span.qty-minus(data-productprice=`${product.price}` onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                                            i.fa.fa-minus(aria-hidden="true")
                                        input#qty.qty-text(type="number" step="1" min="1" max="300" name="quantity" value=`${cartQtyArr[i]}`)
                                        span.qty-plus(data-productprice=`${product.price}` onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                                            i.fa.fa-plus(aria-hidden="true")
