                |  by 
                a(href="https://colorlib.com" target="_blank") Colorlib
                // Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0.
          // Single Widget Area
          .col-12.col-lg-8
            .single_widget_area
              // Footer Menu
              .footer_menu
                nav.navbar.navbar-expand-lg.justify-content-end
                  button.navbar-toggler(type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation")
                    i.fa.fa-bars
                  #footerNavContent.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                      li.nav-item.active
                        a.nav-link(href='/') Home
                      li.nav-item
                        a.nav-link(href='#') Shop
                      li.nav-item
                        a.nav-link(href='#') Product
                      li.nav-item
                        a.nav-link(href='/addTocartWishlist/getAddToCartPage') Cart
                      li.nav-item
                        a.nav-link(href='#') Checkout
